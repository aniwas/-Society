<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/btnVisitors"
        android:layout_width="158dp"
        android:layout_height="67dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/gradient_blue_square"
        android:text="Visitors"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPayFee"
        android:layout_width="158dp"
        android:layout_height="67dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/gradient_blue_square"
        android:text="Pay Maintainance Fee"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/amenityBtn"
        android:layout_width="158dp"
        android:layout_height="67dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/gradient_blue_square"
        android:text="Book Amenities"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/chatButton"
        android:layout_width="158dp"
        android:layout_height="67dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="312dp"
        android:background="@drawable/gradient_blue_square"
        android:text="Apartment Chat"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/announcementBtn"
        android:layout_width="158dp"
        android:layout_height="67dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="312dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/gradient_blue_square"
        android:text="Announcements"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnComplain"
        android:layout_width="158dp"
        android:layout_height="67dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/gradient_blue_square"
        android:text="Raise A Complaint"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="25dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="504dp"
        android:layout_height="247dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatButton"
        app:srcCompat="@drawable/logo2" />

    <Button
        android:id="@+id/emergencyButton"
        android:layout_width="93dp"
        android:layout_height="35dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="8dp"
        android:background="#610524"
        android:text="EMERGENCY"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>