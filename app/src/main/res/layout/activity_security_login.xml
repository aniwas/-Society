<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A10B3E"
    tools:context=".SecurityLoginActivity">

    <ImageView
        android:id="@+id/loginIcon"
        android:layout_width="278dp"
        android:layout_height="247dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/security"
        app:srcCompat="@drawable/security" />

    <EditText
        android:id="@+id/securityLoginName"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginIcon"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="20dp"
        android:hint="Admin Name"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <EditText
        android:id="@+id/securityLoginNumber"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginIcon"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="20dp"
        android:hint="Security Pin"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <Button
        android:id="@+id/authenticateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/securityLoginNumber"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        android:text="Authenticate" />
    />
</RelativeLayout>